{
    "version": 2,
    "builds": [
      { "src": "api/index.php", "use": "vercel/php" },
      { "src": "your-build-directory/**", "use": "@vercel/static-build" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "your-build-directory/$1"
      }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://yourproductionurl.com",
      "APP_KEY": "@app_key",
      "DB_CONNECTION": "mysql",
      "DB_HOST": "your-db-host",
      "DB_PORT": "your-db-port",
      "DB_DATABASE": "your-db-name",
      "DB_USERNAME": "your-db-username",
      "DB_PASSWORD": "your-db-password"
    },
    "functions": {
      "api/index.php": { "runtime": "vercel-php@0.8.0" }
    }
  }
